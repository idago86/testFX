<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="root" prefHeight="200.0" prefWidth="460.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.LoginFrameController">
   <children>
      <VBox layoutY="14.0" prefHeight="200.0" prefWidth="460.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="usernameFLD" alignment="CENTER" prefHeight="25.0" prefWidth="424.0" promptText="Username">
               <font>
                  <Font name="Arial Nova Light" size="13.0" />
               </font>
            </TextField>
            <TextField fx:id="parolaFLD" alignment="CENTER" promptText="Parola">
               <font>
                  <Font name="Arial Nova Light" size="13.0" />
               </font>
            </TextField>
            <HBox prefHeight="36.0" prefWidth="282.0" spacing="30.0">
               <children>
                  <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#onLoginClickBtn" prefHeight="25.0" prefWidth="148.0" text="Login">
                     <font>
                        <Font name="Arial Nova Light" size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="registerBtn" mnemonicParsing="false" onAction="#onRegisterClickBtn" prefHeight="26.0" prefWidth="168.0" text="Register As User">
                     <font>
                        <Font name="Arial Nova Light" size="13.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="100.0" right="100.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
